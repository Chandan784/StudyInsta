<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studyinsta.studyinsta">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:roundIcon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.studyinsta.studyinsta.TestSetsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/WithActionBarTheme"
            android:launchMode = "singleTop"/>
        <activity android:name="com.studyinsta.studyinsta.TestInstructionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/WithActionBarTheme"
            android:launchMode = "singleTop"/>
        <activity
            android:name="com.studyinsta.studyinsta.QuestionDisplayActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme"
            android:parentActivityName="com.studyinsta.studyinsta.MainActivity"
            android:launchMode = "singleTop"/>
        <activity
            android:name="com.studyinsta.studyinsta.TestAnalysisActivity"
            android:parentActivityName="com.studyinsta.studyinsta.MainActivity"
            android:screenOrientation="portrait"
            android:launchMode = "singleTop"
            android:theme="@style/WithActionBarTheme" />

        <service android:name="com.studyinsta.studyinsta.classes.FirebaseDeviceTokenService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.studyinsta.studyinsta.classes.FirebaseCloudMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name="com.studyinsta.studyinsta.UpdateUserInfoActivity"
            android:screenOrientation="portrait"
            android:launchMode = "singleTop"
            />
        <activity
            android:name="com.studyinsta.studyinsta.LecturePlayActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
            android:launchMode = "singleTop"/>
        <activity android:name="com.studyinsta.studyinsta.CourseMaterialActivity"
            android:screenOrientation="portrait"
            android:launchMode = "singleTop"
            />
        <activity android:name="com.studyinsta.studyinsta.CourseSubjectsActivity"
            android:screenOrientation="portrait"
            android:launchMode = "singleTop"
            />
        <!-- configChanges is used to prevent reloading on orientation change -->
        <activity
            android:launchMode = "singleTop"
            android:name="com.studyinsta.studyinsta.NotesDisplayActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity android:name="com.studyinsta.studyinsta.ViewAllActivity"
            android:screenOrientation="portrait"
            android:launchMode = "singleTop"
            />
        <activity android:name="com.studyinsta.studyinsta.DeliveryActivity"
            android:screenOrientation="portrait"
            android:launchMode = "singleTop"
            />
        <activity
            android:name="com.studyinsta.studyinsta.OrderDetailsActivity"
            android:launchMode = "singleTop"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name="com.studyinsta.studyinsta.ProductDetailsActivity"
            android:screenOrientation="portrait"
            android:launchMode = "singleTop"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name="com.studyinsta.studyinsta.CategoryActivity"
            android:launchMode = "singleTop"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name="com.studyinsta.studyinsta.MainActivity"
            android:launchMode = "singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.studyinsta.studyinsta.RegisterActivity"
            android:launchMode = "singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme" />
        <activity
            android:name="com.studyinsta.studyinsta.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="rzp_live_V0KLJ4SZifxSL1" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/logo" />


    </application>
    <queries>
        <intent>
            <action android:name="com.google.android.youtube.api.service.START" />
        </intent>
    </queries>

</manifest>